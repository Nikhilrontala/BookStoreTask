                var deleteLink = '<center><a href="#" onclick="DeleteShelves(\'' + book.BookId + '\', \'' + book.selfCode + '\')"><i class="flaticon-delete-4 text-danger"></i></a></center>';

                if (book.selfStatus != "Active" || book.Book != "Active") {
